<Window x:Class="MultiMovies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiMovies"
        xmlns:conv="clr-namespace:MultiMovies.Lib.Converters"
        mc:Ignorable="d"
        xmlns:v="clr-namespace:MultiMovies.Views"
        xmlns:vm="clr-namespace:MultiMovies.ViewModels"
        Title="Home Page"
        Height="800" Width="1000"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        Topmost="True"
        ResizeMode="CanResize">
    <Window.Resources>
        <conv:TruncateConverter x:Key="TruncateConverter"/>
    </Window.Resources>

    <!--<v:M3U8Player />-->

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Background="{DynamicResource BackgroundBase100}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                    <TextBox Style="{DynamicResource SearchBox}"/>
                    <Button Content="Search" Style="{DynamicResource NormalButton}" />
                </StackPanel>

                <Button Grid.Row="1" Padding="0" BorderThickness="0" Background="Transparent" Cursor="Hand" Margin="0 0 0 30"
                        Style="{DynamicResource NormalButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding Source={x:Static vm:HomeViewModel.Instance}, Path=PopularMovie.backdrop_path}"
                               Height="600" Stretch="UniformToFill"
                               SnapsToDevicePixels="True"
                               RenderTransformOrigin="0.5,0.5"/>

                        <Rectangle Height="600">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0.6,0">
                                    <GradientStop Color="#CC000000" Offset="0"/>
                                    <GradientStop Color="#BB000000" Offset="0.5"/>
                                    <GradientStop Color="#AA000000" Offset="0.7"/>
                                    <GradientStop Color="#77000000" Offset="0.85"/>
                                    <GradientStop Color="#33000000" Offset="0.93"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="500" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Source={x:Static vm:HomeViewModel.Instance}, Path=PopularMovie.title}"
                                       Foreground="{DynamicResource TextPrimary}"
                                       Opacity="0.65"
                                       FontWeight="Bold"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"
                                       FontSize="40"
                                       TextWrapping="Wrap" />

                            <TextBlock Grid.Row="1"
                                       Text="{Binding 
                                            Source={x:Static vm:HomeViewModel.Instance}, 
                                            Path=PopularMovie.overview, 
                                            Converter={StaticResource TruncateConverter}}"
                                       MaxWidth="600"
                                       Foreground="{DynamicResource TextPrimary}"
                                       Opacity="0.5"
                                       FontWeight="Bold"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"
                                       FontSize="17"
                                       TextWrapping="Wrap"/>

                            <Button Grid.Row="2"
                                    MaxWidth="200"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    Style="{DynamicResource BigButton}"
                                    Content="Watch Now!" />
                        </Grid>
                    </Grid>
                </Button>

                <Grid Grid.Row="2">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBar}" />
                        </ScrollViewer.Resources>
                        <ItemsControl ItemsSource="{Binding Items}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      HorizontalAlignment="Left">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="180" Margin="0,0,10,30"
                                            Padding="0"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Cursor="Hand">
                                        <Grid>
                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill" SnapsToDevicePixels="True" />
                                            <Rectangle Width="180" VerticalAlignment="Bottom" Height="100">
                                                <Rectangle.Fill>
                                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0.4">
                                                        <GradientStop Color="#CC000000" Offset="0" />
                                                        <GradientStop Color="#BB000000" Offset="0.3" />
                                                        <GradientStop Color="#AA000000" Offset="0.5" />
                                                        <GradientStop Color="#77000000" Offset="0.65" />
                                                        <GradientStop Color="#33000000" Offset="0.85" />
                                                        <GradientStop Color="#00000000" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="{DynamicResource TextPrimary}"
                                                       Opacity="0.65"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,0,20"
                                                       FontSize="20"
                                                       TextWrapping="Wrap" />
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
