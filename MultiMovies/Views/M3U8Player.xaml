<UserControl x:Class="MultiMovies.Views.M3U8Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiMovies.Views"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:vm="clr-namespace:MultiMovies.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <vlc:VideoView MediaPlayer="{Binding Source={x:Static vm:MediaPlayerViewModel.Instance}, Path=Mediaplayer}"/>
    </Grid>
</UserControl>
