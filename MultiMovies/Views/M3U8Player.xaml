<UserControl x:Class="MultiMovies.Views.M3U8Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiMovies.Views"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:vm="clr-namespace:MultiMovies.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <vlc:VideoView Grid.Row="0" MediaPlayer="{Binding Source={x:Static vm:MediaPlayerViewModel.Instance}, Path=Mediaplayer}"/>
        <StackPanel Grid.Row="1" Panel.ZIndex="10000">
            <Slider Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding Source={x:Static vm:MediaPlayerViewModel.Instance}, Path=Timeline}"/>
            <Button Content="PlayPause" Command="{Binding Source={x:Static vm:MediaPlayerViewModel.Instance}, Path=PlayPauseCommand}" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
