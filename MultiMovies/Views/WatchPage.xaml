<Page x:Class="MultiMovies.Views.WatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiMovies.Views"
      xmlns:vm="clr-namespace:MultiMovies.ViewModels"
      xmlns:cnv="clr-namespace:MultiMovies.Lib.Converters"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="WatchPage">
    <Page.Resources>
        <cnv:ServerColorConverter x:Key="ServerColorConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500px"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,10">
            <local:M3U8Player />
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="{DynamicResource TextPrimary}" FontWeight="bold" Margin="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Center">Select Server:</TextBlock>
                    <ItemsControl ItemsSource="{Binding Source={x:Static vm:WatchPageViewModel.Instance}, Path=Sources, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"></WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="5,5,5,5" Background="Transparent">
                                    <Border CornerRadius="5" Background="{Binding ., Converter={StaticResource ServerColorConverter}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                        <TextBlock Text="{Binding server}" Foreground="{DynamicResource TextPrimary}" Padding="4,4,4,4"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction 
                                                    Command="{Binding Source={x:Static vm:WatchPageViewModel.Instance}, Path=ServerSelectCommand}"
                                                    CommandParameter="{Binding .}"
                                                    />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <TextBlock FontWeight="Bold" FontSize="15" Margin="10,10,0,0" Text="{Binding Source={x:Static vm:WatchPageViewModel.Instance}, Path=MovieDetails.tmdbTitle}" Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock FontSize="10" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Source={x:Static vm:WatchPageViewModel.Instance}, Path=MovieDetails.description}" Foreground="{DynamicResource TextPrimary}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
