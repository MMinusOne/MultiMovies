<Page x:Class="MultiMovies.Views.WatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiMovies.Views"
      xmlns:vm="clr-namespace:MultiMovies.ViewModels"
      xmlns:cnv="clr-namespace:MultiMovies.Lib.Converters"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="WatchPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Row="0">
            <Button Click="GoHome_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,10" Foreground="{DynamicResource TextPrimary}" Background="{DynamicResource BackgroundBase200}">Home</Button>
        </Grid>
        <Grid Grid.Row="1" Margin="10,10,10,10">
            <local:M3U8Player />
        </Grid>
     
    </Grid>
</Page>
