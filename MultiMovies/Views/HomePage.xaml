<Page x:Class="MultiMovies.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiMovies.Views"
      xmlns:vm="clr-namespace:MultiMovies.ViewModels"
      xmlns:conv="clr-namespace:MultiMovies.Lib.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1000"
      Title="HomePage">
    <Page.Resources>
        <conv:TruncateConverter x:Key="TruncateConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" x:Name="SearchBox"
                     Style="{DynamicResource SearchBox}"
                     Tag="Search..."
                     HorizontalAlignment="Stretch"/>

            <Button Grid.Column="1" Content="Search" Style="{DynamicResource NormalButton}" Click="Search_Click" />
        </Grid>

        <TextBlock Grid.Column="1"
                   Text="MultiMovies"
                   Foreground="{DynamicResource TextPrimary}"
                   FontSize="30"
                   HorizontalAlignment="Center"/>

        <Button Grid.Row="1" Grid.ColumnSpan="3" Padding="0" BorderThickness="0" Background="Transparent" Cursor="Hand" Margin="0 20 0 30"
            Style="{DynamicResource NormalButton}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="{Binding Source={x:Static vm:HomeViewModel.Instance}, Path=PopularMovie.backdrop_path}"
                   Height="600" Stretch="UniformToFill"
                   SnapsToDevicePixels="True"
                   RenderTransformOrigin="0.5,0.5"/>

                <Rectangle Height="600">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0.6,0">
                            <GradientStop Color="#CC000000" Offset="0"/>
                            <GradientStop Color="#BB000000" Offset="0.5"/>
                            <GradientStop Color="#AA000000" Offset="0.7"/>
                            <GradientStop Color="#77000000" Offset="0.85"/>
                            <GradientStop Color="#33000000" Offset="0.93"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding Source={x:Static vm:HomeViewModel.Instance}, Path=PopularMovie.title}"
                           Foreground="{DynamicResource TextPrimary}"
                           Opacity="0.65"
                           FontWeight="Bold"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,20"
                           FontSize="40"
                           TextWrapping="Wrap" />

                    <TextBlock Grid.Row="1"
                           Text="{Binding 
                                Source={x:Static vm:HomeViewModel.Instance}, 
                                Path=PopularMovie.overview, 
                                Converter={StaticResource TruncateConverter}}"
                           MaxWidth="600"
                           Foreground="{DynamicResource TextPrimary}"
                           Opacity="0.5"
                           FontWeight="Bold"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,20"
                           FontSize="17"
                           TextWrapping="Wrap"/>

                    <Button Grid.Row="2"
                        MaxWidth="200"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource BigButton}"
                            Click="Watch_ButtonClick"
                            CommandParameter="{Binding  Source={x:Static vm:HomeViewModel.Instance}, Path=PopularMovie}"
                        Content="Watch Now!" />
                </Grid>
            </Grid>
        </Button>

        <Grid Grid.Row="2" Grid.ColumnSpan="3">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBar}" />
                </ScrollViewer.Resources>
                <ItemsControl ItemsSource="{Binding Source={x:Static vm:HomeViewModel.Instance}, Path=MovieCards}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          HorizontalAlignment="Left"
                          SnapsToDevicePixels="True">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="180" Margin="0,0,10,30"
                                Padding="0"
                                BorderThickness="0"
                                Background="Transparent"
                                Cursor="Hand"
                                Style="{DynamicResource NormalButton}"
                                Click="Card_Click"
                                    CommandParameter="{Binding .}"
                                VerticalAlignment="Top">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <Image Source="{Binding poster_path}" Stretch="UniformToFill" />

                                    <TextBlock Grid.Row="1"
                                           Text="{Binding title}"
                                           Foreground="{DynamicResource TextPrimary}"
                                           Opacity="0.65"
                                           FontWeight="Bold"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"
                                           FontSize="18"
                                           TextWrapping="Wrap" />
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
