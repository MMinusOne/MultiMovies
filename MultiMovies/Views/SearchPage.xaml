<Page x:Class="MultiMovies.Views.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiMovies.Views"
      xmlns:vm="clr-namespace:MultiMovies.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1000"
      Title="Search Page">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" x:Name="SearchBox"
                     Style="{DynamicResource SearchBox}"
                     Tag="Search..."
                     HorizontalAlignment="Stretch"/>

            <Button Grid.Column="1" Content="Search" Style="{DynamicResource NormalButton}" Click="Search_Click" />
        </Grid>

        <StackPanel HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Grid.Column="1">
            <TextBlock Text="Search results for: "
                       Foreground="{DynamicResource TextPrimary}"
                       FontSize="25"/>
            <TextBlock Text="{Binding Source={x:Static vm:SearchPageViewModel.Instance}, Path=Query, UpdateSourceTrigger=PropertyChanged}"
                       Foreground="LightGreen"
                       TextWrapping="Wrap"
                       FontSize="25"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3" Margin="0 20 0 0">
            <ItemsControl HorizontalAlignment="Center" ItemsSource="{Binding Source={x:Static vm:SearchPageViewModel.Instance}, Path=MoviesResults}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Width="180" Margin="0,0,10,30"
                                Padding="0"
                                BorderThickness="0"
                                Background="Transparent"
                                Cursor="Hand"
                                Style="{DynamicResource NormalButton}"
                                VerticalAlignment="Top"
                                Click="Card_Click"
                                CommandParameter="{Binding .}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>

                                <Image Source="{Binding poster_path}" Stretch="UniformToFill" />

                                <TextBlock Grid.Row="1"
                                           Text="{Binding title}"
                                           Foreground="{DynamicResource TextPrimary}"
                                           Opacity="0.65"
                                           FontWeight="Bold"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"
                                           FontSize="18"
                                           TextWrapping="Wrap" />
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
