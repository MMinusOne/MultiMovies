<Application x:Class="MultiMovies.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MultiMovies"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ViewList/Views.xaml" />
                <ResourceDictionary Source="/Lib/Themes/Dark.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBar}" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
